<Window x:Class="PipeWiseClient.Windows.CategoricalEncodingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PipeWiseClient.Windows"
        Title="קידוד קטגוריאלי" Height="600" Width="500"
        FlowDirection="RightToLeft"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">

    <Window.Resources>
        <local:BoolToFontWeightConverter x:Key="BoolToFontWeightConverter"/>
        <!-- סגנונות בסיסיים -->
        <Style x:Key="HeaderTextBlock" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <Style x:Key="LabelTextBlock" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#34495E"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CancelButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#95A5A6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#7F8C8D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- סגנון לרשימת המיפוי -->
        <Style x:Key="MappingListView" TargetType="ListView">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E1E5E9"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style x:Key="CategoryValueTextBlock" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="8,0"/>
        </Style>

        <Style x:Key="EncodingTextBox" TargetType="TextBox">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- כותרת -->
        <TextBlock Grid.Row="0" 
                   Text="הגדרת קידוד קטגוריאלי" 
                   Style="{StaticResource HeaderTextBlock}"
                   FontSize="16" 
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- מידע על השדה -->
        <Border Grid.Row="1" 
                Background="#ECF0F1" 
                Padding="12" 
                CornerRadius="4"
                Margin="0,0,0,15">
            <StackPanel>
                <TextBlock x:Name="FieldInfoTextBlock" 
                           Style="{StaticResource LabelTextBlock}"
                           TextWrapping="Wrap"/>
                <TextBlock x:Name="ValuesCountTextBlock" 
                           Style="{StaticResource LabelTextBlock}"
                           Foreground="#7F8C8D"
                           FontSize="10"
                           Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <!-- אפשרויות קונפיגורציה -->
        <GroupBox Grid.Row="2" 
                  Header="הגדרות שדה יעד" 
                  Padding="10"
                  Margin="0,0,0,15">
            <StackPanel>
                <!-- בחירת מצב פעולה -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <RadioButton x:Name="ReplaceFieldRadio" 
                                 Content="החלף שדה קיים" 
                                 IsChecked="True"
                                 GroupName="TargetMode"
                                 Margin="0,0,20,0"/>
                    <RadioButton x:Name="CreateNewFieldRadio" 
                                 Content="צור שדה חדש"
                                 GroupName="TargetMode"/>
                </StackPanel>

                <!-- שם שדה חדש -->
                <StackPanel x:Name="NewFieldPanel" 
                            Orientation="Horizontal" 
                            Margin="0,5,0,0"
                            Visibility="Collapsed">
                    <TextBlock Text="שם השדה החדש:" 
                               Style="{StaticResource LabelTextBlock}"
                               Width="100"/>
                    <TextBox x:Name="NewFieldNameTextBox" 
                             Style="{StaticResource ModernTextBox}"
                             Width="200"/>
                </StackPanel>

                <!-- מחיקת שדה מקורי -->
                <CheckBox x:Name="DeleteOriginalCheckBox" 
                          Content="מחק שדה מקורי לאחר יצירת שדה חדש"
                          Margin="0,8,0,0"
                          Visibility="Collapsed"/>
            </StackPanel>
        </GroupBox>

        <!-- רשימת המיפוי -->
        <GroupBox Grid.Row="3" Header="מיפוי ערכים">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- כותרות -->
                <Border Grid.Row="0" 
                        Background="#34495E" 
                        Padding="8,6">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" 
                                   Text="ערך מקורי" 
                                   Foreground="White" 
                                   FontWeight="Bold"/>
                        <TextBlock Grid.Column="1" 
                                   Text="קוד מספרי" 
                                   Foreground="White" 
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- רשימת המיפוי -->
                <ListView x:Name="MappingListView" 
                          Grid.Row="1"
                          Style="{StaticResource MappingListView}"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Width="420">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" 
                                           Text="{Binding OriginalValue}" 
                                           Style="{StaticResource CategoryValueTextBlock}"
                                           FontWeight="{Binding IsSpecialValue, Converter={StaticResource BoolToFontWeightConverter}}"/>
                                <TextBox Grid.Column="1" 
                                         Text="{Binding EncodedValue, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource EncodingTextBox}"
                                         HorizontalAlignment="Center"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </GroupBox>

        <!-- הודעות שגיאה -->
        <Border x:Name="ErrorPanel" 
                Grid.Row="4"
                Background="#E74C3C" 
                Padding="10" 
                CornerRadius="4"
                Margin="0,10,0,0"
                Visibility="Collapsed">
            <TextBlock x:Name="ErrorMessageTextBlock" 
                       Foreground="White" 
                       FontWeight="Bold"
                       TextWrapping="Wrap"/>
        </Border>

        <!-- כפתורי פעולה -->
        <StackPanel Grid.Row="5" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0">
            <Button x:Name="OkButton" 
                    Content="אישור" 
                    Style="{StaticResource ModernButton}"
                    Width="100"
                    Margin="0,0,10,0"
                    Click="OkButton_Click"/>
            <Button x:Name="CancelButton" 
                    Content="ביטול" 
                    Style="{StaticResource CancelButton}"
                    Width="100"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>

