<Window x:Class="PipeWiseClient.ReportsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="דוחות Pipeline" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">
    
    <Window.Resources>
        <!-- סגנונות -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="3" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#357ABD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StatusSuccessButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#27AE60"/>
        </Style>

        <Style x:Key="StatusWarningButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#F39C12"/>
        </Style>

        <Style x:Key="StatusErrorButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#E74C3C"/>
        </Style>

        <Style x:Key="ActionButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#34495E"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="10"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- כותרת -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="📊 דוחות Pipeline" 
                       FontSize="24" FontWeight="Bold" 
                       Foreground="#2C3E50" 
                       VerticalAlignment="Center"/>
            <Button x:Name="RefreshButton" 
                    Content="🔄 רענן" 
                    Click="RefreshButton_Click"
                    Style="{StaticResource ModernButton}"
                    Margin="20,0,0,0"/>
        </StackPanel>

        <!-- פילטרים ופעולות -->
        <Border Grid.Row="1" 
                Background="#F8F9FA" 
                BorderBrush="#E1E5E9" 
                BorderThickness="1" 
                CornerRadius="5" 
                Padding="15" 
                Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="פעולות:" 
                           FontWeight="Bold" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,0"/>
                <Button x:Name="CleanupButton" 
                        Content="🧹 נקה דוחות ישנים" 
                        Click="CleanupButton_Click"
                        Style="{StaticResource ModernButton}"
                        Background="#E67E22"
                        Margin="5,0"/>
                <TextBlock Text="סך הכל:" 
                           FontWeight="Bold" 
                           VerticalAlignment="Center" 
                           Margin="20,0,5,0"/>
                <TextBlock x:Name="TotalReportsTextBlock" 
                           Text="0 דוחות" 
                           VerticalAlignment="Center" 
                           FontWeight="SemiBold"
                           Foreground="#2C3E50"/>
            </StackPanel>
        </Border>

        <!-- רשימת דוחות -->
        <Border Grid.Row="2" 
                Background="White" 
                BorderBrush="#E1E5E9" 
                BorderThickness="1" 
                CornerRadius="5">
            <Grid>
                <!-- Loading indicator -->
                <StackPanel x:Name="LoadingPanel" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           Visibility="Visible">
                    <TextBlock Text="⏳ טוען דוחות..." 
                               FontSize="16" 
                               Foreground="#7F8C8D" 
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Empty state -->
                <StackPanel x:Name="EmptyStatePanel" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           Visibility="Collapsed">
                    <TextBlock Text="📄" 
                               FontSize="48" 
                               HorizontalAlignment="Center" 
                               Foreground="#BDC3C7"/>
                    <TextBlock Text="אין דוחות זמינים" 
                               FontSize="18" 
                               Foreground="#7F8C8D" 
                               HorizontalAlignment="Center"
                               Margin="0,10,0,0"/>
                    <TextBlock Text="דוחות יופיעו כאן לאחר הרצת Pipeline" 
                               FontSize="12" 
                               Foreground="#95A5A6" 
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <!-- רשימת דוחות -->
                <ScrollViewer x:Name="ReportsScrollViewer"
                             VerticalScrollBarVisibility="Auto"
                             Visibility="Collapsed">
                    <ItemsControl x:Name="ReportsItemsControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White" 
                                        BorderBrush="#E1E5E9" 
                                        BorderThickness="0,0,0,1" 
                                        Padding="15">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- מידע הדוח -->
                                        <StackPanel Grid.Column="0">
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                                <TextBlock Text="{Binding PipelineName}" 
                                                           FontSize="16" 
                                                           FontWeight="Bold" 
                                                           Foreground="#2C3E50"/>
                                                <Border Background="{Binding StatusColor}" 
                                                        CornerRadius="10" 
                                                        Padding="8,2" 
                                                        Margin="10,0,0,0">
                                                    <TextBlock Text="{Binding StatusText}" 
                                                               Foreground="White" 
                                                               FontSize="10" 
                                                               FontWeight="Bold"/>
                                                </Border>
                                            </StackPanel>

                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                                <TextBlock Text="📅" Margin="0,0,5,0"/>
                                                <TextBlock Text="{Binding FormattedDate}" 
                                                           Foreground="#7F8C8D" 
                                                           Margin="0,0,15,0"/>
                                                <TextBlock Text="⏱️" Margin="0,0,5,0"/>
                                                <TextBlock Text="{Binding Duration}" 
                                                           Foreground="#7F8C8D" 
                                                           Margin="0,0,15,0"/>
                                                <TextBlock Text="📊" Margin="0,0,5,0"/>
                                                <TextBlock Text="{Binding RowsInfo}" 
                                                           Foreground="#7F8C8D"/>
                                            </StackPanel>

                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="📁" Margin="0,0,5,0"/>
                                                <TextBlock Text="{Binding SourceType}" 
                                                           Foreground="#95A5A6" 
                                                           Margin="0,0,15,0"/>
                                                <TextBlock Text="❌" Margin="0,0,5,0" Foreground="#E74C3C"/>
                                                <TextBlock Text="{Binding TotalErrors}" 
                                                           Foreground="#E74C3C" 
                                                           Margin="0,0,15,0"/>
                                                <TextBlock Text="⚠️" Margin="0,0,5,0" Foreground="#F39C12"/>
                                                <TextBlock Text="{Binding TotalWarnings}" 
                                                           Foreground="#F39C12"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- כפתורי פעולה -->
                                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                                            <Button Content="📄 HTML" 
                                                    Click="OpenHtmlButton_Click"
                                                    Style="{StaticResource ActionButton}"
                                                    Background="#3498DB"
                                                    IsEnabled="{Binding HasHtml}"
                                                    Tag="{Binding}"/>
                                            <Button Content="📑 PDF" 
                                                    Click="DownloadPdfButton_Click"
                                                    Style="{StaticResource ActionButton}"
                                                    Background="#9B59B6"
                                                    IsEnabled="{Binding HasPdf}"
                                                    Tag="{Binding}"/>
                                            <Button Content="🗑️ מחק" 
                                                    Click="DeleteButton_Click"
                                                    Style="{StaticResource ActionButton}"
                                                    Background="#E74C3C"
                                                    Tag="{Binding}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- סטטוס בר -->
        <Border Grid.Row="3" 
                Background="#34495E" 
                CornerRadius="3" 
                Padding="10,5" 
                Margin="0,15,0,0">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="StatusTextBlock" 
                           Text="מוכן" 
                           Foreground="White" 
                           FontSize="11"/>
                <TextBlock Text=" | " 
                           Foreground="#BDC3C7" 
                           Margin="10,0"/>
                <TextBlock x:Name="LastUpdateTextBlock" 
                           Text="עדכון אחרון: לא עודכן" 
                           Foreground="#BDC3C7" 
                           FontSize="11"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>