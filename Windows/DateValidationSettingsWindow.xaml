<Window x:Class="PipeWiseClient.Windows.DateValidationSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="הגדרות אימות תאריכים" Height="500" Width="520"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    
    <DockPanel Margin="20">
        <!-- כפתורים בתחתית -->
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="OkButton" Content="אישור" Width="80" Height="35" 
                    Margin="0,0,10,0" Click="OkButton_Click" IsDefault="True" FontSize="14"/>
            <Button x:Name="CancelButton" Content="ביטול" Width="80" Height="35" 
                    Click="CancelButton_Click" IsCancel="True" FontSize="14"/>
        </StackPanel>

        <!-- תוכן עיקרי -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- כותרת -->
                <TextBlock Text="הגדרות אימות ועיצוב תאריכים" 
                           FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>

                <!-- פורמט תאריך -->
                <GroupBox Header="פורמט התאריך הרצוי" Margin="0,0,0,15">
                    <StackPanel Margin="15">
                        <TextBlock Text="בחר את הפורמט שבו תרצה שכל התאריכים יוצגו:" Margin="0,0,0,10"/>
                        <ComboBox x:Name="DateFormatComboBox" FontFamily="Consolas" Height="30">
                            <ComboBoxItem Tag="dd/MM/yyyy">31/12/2024 (DD/MM/YYYY)</ComboBoxItem>
                            <ComboBoxItem Tag="MM/dd/yyyy">12/31/2024 (MM/DD/YYYY)</ComboBoxItem>
                            <ComboBoxItem Tag="yyyy-MM-dd">2024-12-31 (YYYY-MM-DD)</ComboBoxItem>
                            <ComboBoxItem Tag="dd-MM-yyyy">31-12-2024 (DD-MM-YYYY)</ComboBoxItem>
                            <ComboBoxItem Tag="MM-dd-yyyy">12-31-2024 (MM-DD-YYYY)</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                </GroupBox>

                <!-- טיפול בשגיאות -->
                <GroupBox Header="מה לעשות עם תאריכים לא תקינים" Margin="0,0,0,15">
                    <StackPanel Margin="15">
                        <RadioButton x:Name="RemoveRowRadio" Content="הסר את השורה כולה" 
                                     GroupName="DateValidationAction" Margin="0,0,0,15"/>
                        
                        <RadioButton x:Name="ReplaceWithDateRadio" Content="החלף בתאריך קבוע:" 
                                     GroupName="DateValidationAction" Margin="0,0,0,10"/>
                        
                        <DatePicker x:Name="ReplacementDatePicker" Margin="25,0,0,0" Height="30"
                                    IsEnabled="{Binding IsChecked, ElementName=ReplaceWithDateRadio}"/>
                    </StackPanel>
                </GroupBox>

                <!-- דוגמאות -->
                <GroupBox Header="דוגמאות לתאריכים שייכשלו באימות">
                    <StackPanel Margin="15">
                        <TextBlock FontFamily="Consolas" FontSize="11" Foreground="Red">
                            <Run Text="• 32/12/2024 (יום לא קיים)"/>
                            <LineBreak/>
                            <Run Text="• 15/13/2024 (חודש לא קיים)"/>
                            <LineBreak/>
                            <Run Text="• 29/02/2023 (שנה לא מעוברת)"/>
                            <LineBreak/>
                            <Run Text="• abc/def/ghij (לא מספרי)"/>
                        </TextBlock>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>