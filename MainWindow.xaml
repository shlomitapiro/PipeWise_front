<Window x:Class="PipeWiseClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PipeWise - ETL Client" Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">

    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#357ABD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- אופציונלי: סגנון יציב לכפתורי ה-Action Bar -->
        <Style x:Key="ActionBarButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Height" Value="36"/>
            <Setter Property="MinWidth" Value="150"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <TextBlock Text="{TemplateBinding Content}"
                                       TextWrapping="NoWrap"
                                       TextTrimming="CharacterEllipsis"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#357ABD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="ColumnPanel" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E1E5E9"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="15"/>
        </Style>

        <!-- GridSplitter -->
        <Style x:Key="CustomGridSplitter" TargetType="GridSplitter">
            <Setter Property="Background" Value="#E1E5E9"/>
            <Setter Property="Height" Value="8"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="SizeNS"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GridSplitter">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4">
                            <Grid>
                                <Rectangle Height="2" 
                                           Fill="#BDC3C7" 
                                           Margin="40,0"
                                           VerticalAlignment="Center"
                                           RadiusX="1" RadiusY="1"/>
                                <StackPanel Orientation="Horizontal" 
                                            HorizontalAlignment="Center" 
                                            VerticalAlignment="Center">
                                    <Ellipse Width="4" Height="4" 
                                             Fill="#95A5A6" 
                                             Margin="1,0"/>
                                    <Ellipse Width="4" Height="4" 
                                             Fill="#95A5A6" 
                                             Margin="1,0"/>
                                    <Ellipse Width="4" Height="4" 
                                             Fill="#95A5A6" 
                                             Margin="1,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D5DBDB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid x:Name="MainGrid" Background="#F5F6FA" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*" MinHeight="200"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*" MinHeight="150"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Style="{StaticResource ColumnPanel}" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="📁 בחירת קובץ מקור" Style="{StaticResource SectionHeader}"/>
                
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBox x:Name="FilePathTextBox" 
                             Width="400" 
                             Height="35" 
                             IsReadOnly="True" 
                             VerticalContentAlignment="Center" 
                             Text="לא נבחר קובץ"
                             FontSize="12"
                             Foreground="#7F8C8D"/>
                    <Button x:Name="BrowseFileBtn"
                            Content="📂 בחר קובץ" 
                            Click="BrowseFile_Click" 
                            Style="{StaticResource ModernButton}" 
                            Margin="10,0,0,0" Height="35"/>
                </StackPanel>

                <TextBlock x:Name="FileInfoTextBlock" 
                           Text="לא נבחר קובץ" 
                           Foreground="#7F8C8D" 
                           FontStyle="Italic" 
                           Margin="0,5,0,0"/>

                <!-- בחירת סוג קובץ יעד -->
                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <TextBlock Text="סוג קובץ יעד:" 
                            VerticalAlignment="Center" 
                            Margin="0,0,8,0" 
                            Foreground="#2C3E50"/>
                    <ComboBox x:Name="TargetTypeComboBox" Width="180" Height="30" SelectedIndex="0">
                        <ComboBoxItem Content="CSV" Tag="csv"/>
                        <ComboBoxItem Content="JSON" Tag="json"/>
                        <ComboBoxItem Content="XML" Tag="xml"/>
                        <ComboBoxItem Content="Excel (XLSX)" Tag="excel"/>
                    </ComboBox>
                </StackPanel>
                           
                <TextBlock Text="סוגי קבצים נתמכים: CSV, JSON, XML, Excel (XLSX/XLS)" 
                           Foreground="#95A5A6" 
                           FontSize="11" 
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Background="Transparent" Height="2"/>

        <Border Grid.Row="2" Style="{StaticResource ColumnPanel}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <Border Grid.Row="0" 
                        Background="#F8F9FA" 
                        Padding="10,8" 
                        Margin="-15,-15,-15,10"
                        CornerRadius="5,5,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0"
                                   Text="⚙️ הגדר פעולות עיבוד" 
                                   Style="{StaticResource SectionHeader}"
                                   Margin="0"/>
                        
                        <StackPanel Grid.Column="1" 
                                    Orientation="Horizontal" 
                                    VerticalAlignment="Center">
                            <TextBlock Text="↕️" 
                                       FontSize="12" 
                                       Foreground="#95A5A6" 
                                       Margin="0,0,5,0"
                                       ToolTip="ניתן לשנות גודל על ידי גרירת הקו המפריד"/>
                            <TextBlock Text="גודל ניתן לשינוי" 
                                       FontSize="10" 
                                       Foreground="#95A5A6"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock x:Name="NoFileMessageTextBlock" 
                                   Text="בחר קובץ כדי להציג את העמודות הזמינות" 
                                   FontSize="14" 
                                   Foreground="#95A5A6" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,50,0,0"
                                   Visibility="Visible"/>
                        
                        <Border x:Name="GlobalOperationsPanel" 
                                Style="{StaticResource ColumnPanel}"
                                Background="#F0F8FF"
                                Visibility="Collapsed"
                                Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="🌐 פעולות גלובליות על כל הנתונים" 
                                           FontWeight="SemiBold" 
                                           FontSize="14" 
                                           Foreground="#2C3E50" 
                                           Margin="0,0,0,10"/>
                                
                                <WrapPanel>
                                    <CheckBox x:Name="RemoveEmptyRowsCheckBox" 
                                              Content="הסרת שורות ריקות" 
                                              Margin="0,0,15,5"/>
                                    <CheckBox x:Name="RemoveDuplicatesCheckBox" 
                                              Content="הסרת כפילויות" 
                                              Margin="0,0,15,5"/>
                                    <CheckBox x:Name="StripWhitespaceCheckBox" 
                                              Content="מחיקת רווחים מיותרים" 
                                              Margin="0,0,15,5"/>
                                </WrapPanel>
                            </StackPanel>
                        </Border>

                        <ScrollViewer x:Name="ColumnsScrollViewer" 
                                      VerticalScrollBarVisibility="Auto"
                                      Visibility="Collapsed"
                                      MaxHeight="400">
                            <StackPanel x:Name="ColumnsPanel"/>
                        </ScrollViewer>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>

        <GridSplitter Grid.Row="3" 
                      Style="{StaticResource CustomGridSplitter}"
                      ToolTip="גרור כדי לשנות את גודל האזורים"/>

        <Grid Grid.Row="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <WrapPanel Grid.Row="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,15,0,15"
                    ItemHeight="42" ItemWidth="Auto">

            <Button x:Name="ResetSettingsBtn"
                    Content="אפס הגדרות"
                    Style="{StaticResource Btn.Reset}"
                    Tag="&#xE72C;"
                    Click="ResetSettings_Click"/>

            <Button x:Name="ViewReportsBtn"
                    Content="צפה בדוחות"
                    Style="{StaticResource Btn.Reports}"
                    Tag="&#xE9D2;"
                    Click="ViewReports_Click"/>

            <Button x:Name="RunSavedPipelineBtn"
                    Content="בחר פייפליין שמור"
                    Style="{StaticResource Btn.ChoosePipeline}"
                    Tag="&#xE838;"
                    Click="RunSavedPipeline_Click"/>

            <Button x:Name="SaveAsServerPipelineBtn"
                    Content="שמור פייפליין"
                    Style="{StaticResource Btn.SavePipeline}"
                    Tag="&#xE898;"
                    Click="SaveAsServerPipeline_Click"/>

            <Button x:Name="LoadConfigBtn"
                    Content="טען קונפיגורציה"
                    Style="{StaticResource Btn.LoadConfig}"
                    Tag="&#xE8E5;"
                    Click="LoadConfig_Click"/>

            <Button x:Name="SaveConfigBtn"
                    Content="שמור קונפיגורציה"
                    Style="{StaticResource Btn.SaveConfig}"
                    Tag="&#xE74E;"
                    Click="SaveConfig_Click"/>

            <Button x:Name="RunBtn"
                    Content="הרץ Pipeline"
                    Style="{StaticResource Btn.Run}"
                    Tag="&#xE768;"
                    FontSize="14"
                    Click="RunPipeline_Click"/>
            </WrapPanel>
            <Border Grid.Row="1" 
                    Background="#F8F9FA" 
                    BorderBrush="#DEE2E6" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Padding="0">
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" 
                            Background="#343A46" 
                            CornerRadius="8,8,0,0" 
                            Padding="15,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <TextBlock Text="🔔" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock x:Name="NotificationsHeaderText" 
                                           Text="מרכז התראות" 
                                           FontSize="14" 
                                           FontWeight="SemiBold" 
                                           Foreground="White"/>
                                <Border x:Name="NotificationCountBadge" 
                                        Background="#E74C3C" 
                                        CornerRadius="10" 
                                        Padding="6,2" 
                                        Margin="10,0,0,0"
                                        Visibility="Collapsed">
                                    <TextBlock x:Name="NotificationCountText" 
                                               Text="0" 
                                               FontSize="10" 
                                               FontWeight="Bold" 
                                               Foreground="White"/>
                                </Border>
                                
                                <StackPanel Orientation="Horizontal" 
                                            Margin="15,0,0,0"
                                            VerticalAlignment="Center">
                                    <TextBlock Text="↕️" 
                                               FontSize="10" 
                                               Foreground="#95A5A6" 
                                               Margin="0,0,4,0"/>
                                    <TextBlock Text="גודל ניתן לשינוי" 
                                               FontSize="9" 
                                               Foreground="#95A5A6"/>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button x:Name="ClearNotificationsBtn"
                                        Content="🗑️ נקה"
                                        Background="Transparent"
                                        Foreground="White"
                                        BorderThickness="1"
                                        BorderBrush="#6C757D"
                                        Padding="8,4"
                                        FontSize="10"
                                        Click="ClearNotifications_Click"
                                        Margin="0,0,5,0">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}"
                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                                CornerRadius="4"
                                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                              VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#495057"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                
                                <Button x:Name="CollapseNotificationsBtn"
                                        Content="📦"
                                        Background="Transparent"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Padding="8,4"
                                        FontSize="12"
                                        Click="ToggleNotifications_Click">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}"
                                                                CornerRadius="4"
                                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                              VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#495057"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <ScrollViewer x:Name="NotificationsScrollViewer"
                                  Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled"
                                  Padding="0">
                        
                        <StackPanel x:Name="NotificationsPanel" Margin="0">
                            <Border x:Name="DefaultMessageBorder" 
                                    Background="White" 
                                    Padding="20"
                                    Margin="1,0,1,1">
                                <StackPanel HorizontalAlignment="Center" 
                                            VerticalAlignment="Center">
                                    <TextBlock Text="💭" 
                                               FontSize="32" 
                                               HorizontalAlignment="Center" 
                                               Margin="0,0,0,10"/>
                                    <TextBlock Text="מערכת ההתראות מוכנה" 
                                               FontSize="14" 
                                               FontWeight="SemiBold" 
                                               Foreground="#6C757D" 
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="התראות יופיעו כאן כאשר תבוצעו פעולות במערכת" 
                                               FontSize="11" 
                                               Foreground="#ADB5BD" 
                                               HorizontalAlignment="Center" 
                                               Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>

                    <Border Grid.Row="2" 
                            Background="#E9ECEF" 
                            CornerRadius="0,0,8,8" 
                            Padding="15,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <TextBlock x:Name="SystemStatusText" 
                                           Text="🟢 המערכת פועלת תקין" 
                                           FontSize="11" 
                                           Foreground="#495057"/>

                                <ProgressBar x:Name="RunProgressBar"
                                        Width="180" Height="8"
                                        Minimum="0" Maximum="100" Value="0"
                                        Margin="10,0,0,0"
                                        Visibility="Collapsed"/>
                                <TextBlock x:Name="RunProgressText"
                                        Text="0%"
                                        FontSize="10"
                                        Foreground="#495057"
                                        Margin="6,0,0,0"
                                        Visibility="Collapsed"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <TextBlock Text="עדכון אחרון: " 
                                           FontSize="10" 
                                           Foreground="#6C757D"/>
                                <TextBlock x:Name="LastNotificationTimeText" 
                                           Text="אין עדכונים" 
                                           FontSize="10" 
                                           Foreground="#6C757D"/>
                                <Button x:Name="CancelRunBtn"
                                            Content="בטל ריצה"
                                            Style="{StaticResource ActionBarButton}"
                                            Height="28" MinWidth="110"
                                            Margin="10,0,0,0"
                                            Click="CancelRun_Click"
                                            IsEnabled="False"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
