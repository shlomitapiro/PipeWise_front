<Window x:Class="PipeWiseClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PipeWise - ETL Client" Height="700" Width="900"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <!-- סגנונות מותאמים אישית -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#357ABD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="ColumnPanel" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E1E5E9"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="15"/>
        </Style>
    </Window.Resources>

    <Grid Background="#F5F6FA" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="300"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- אזור בחירת קובץ -->
        <Border Grid.Row="0" Style="{StaticResource ColumnPanel}" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="📁 בחירת קובץ מקור" Style="{StaticResource SectionHeader}"/>
                
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBox x:Name="FilePathTextBox" 
                             Width="400" 
                             Height="35" 
                             IsReadOnly="True" 
                             VerticalContentAlignment="Center" 
                             Text="לא נבחר קובץ"
                             FontSize="12"
                             Foreground="#7F8C8D"/>
                    <Button Content="📂 בחר קובץ" 
                            Click="BrowseFile_Click" 
                            Style="{StaticResource ModernButton}" 
                            Margin="10,0,0,0" Height="35"/>
                </StackPanel>

                <TextBlock x:Name="FileInfoTextBlock" 
                           Text="לא נבחר קובץ" 
                           Foreground="#7F8C8D" 
                           FontStyle="Italic" 
                           Margin="0,5,0,0"/>
                           
                <!-- הערה על סוגי קבצים נתמכים -->
                <TextBlock Text="סוגי קבצים נתמכים: CSV, JSON, XML, Excel (XLSX/XLS)" 
                           Foreground="#95A5A6" 
                           FontSize="11" 
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- אזור עמודות ופעולות -->
        <Border Grid.Row="2" Style="{StaticResource ColumnPanel}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="⚙️ הגדר פעולות עיבוד" Style="{StaticResource SectionHeader}"/>
                    
                    <!-- הודעה כאשר אין קובץ -->
                    <TextBlock x:Name="NoFileMessageTextBlock" 
                               Text="בחר קובץ כדי להציג את העמודות הזמינות" 
                               FontSize="14" 
                               Foreground="#95A5A6" 
                               HorizontalAlignment="Center" 
                               Margin="0,50,0,0"
                               Visibility="Visible"/>
                    
                    <!-- פאנל פעולות גלובליות -->
                    <Border x:Name="GlobalOperationsPanel" 
                            Style="{StaticResource ColumnPanel}"
                            Background="#F0F8FF"
                            Visibility="Collapsed"
                            Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="🌐 פעולות גלובליות על כל הנתונים" 
                                       FontWeight="SemiBold" 
                                       FontSize="14" 
                                       Foreground="#2C3E50" 
                                       Margin="0,0,0,10"/>
                            
                            <WrapPanel>
                                <CheckBox x:Name="RemoveEmptyRowsCheckBox" 
                                          Content="הסר שורות ריקות" 
                                          Margin="0,0,15,5"/>
                                <CheckBox x:Name="RemoveDuplicatesCheckBox" 
                                          Content="הסר כפילויות" 
                                          Margin="0,0,15,5"/>
                                <CheckBox x:Name="StripWhitespaceCheckBox" 
                                          Content="נקה רווחים מיותרים" 
                                          Margin="0,0,15,5"/>
                            </WrapPanel>
                        </StackPanel>
                    </Border>

                    <!-- פאנל עמודות דינמי -->
                    <ScrollViewer x:Name="ColumnsScrollViewer" 
                                  VerticalScrollBarVisibility="Auto"
                                  Visibility="Collapsed"
                                  MaxHeight="400">
                        <StackPanel x:Name="ColumnsPanel"/>
                    </ScrollViewer>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- כפתורי פעולה -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,15,0,0">
            <Button Content="🔄 אפס הגדרות" 
                    Click="ResetSettings_Click" 
                    Style="{StaticResource ModernButton}" 
                    Background="#E74C3C" 
                    Margin="0,0,10,0"/>
            <Button Content="💾 שמור קונפיגורציה" 
                    Click="SaveConfig_Click" 
                    Style="{StaticResource ModernButton}" 
                    Background="#27AE60" 
                    Margin="0,0,10,0"/>
            <Button Content="📊 צפה בדוחות" 
                    Click="ViewReports_Click" 
                    Style="{StaticResource ModernButton}" 
                    Background="#3498DB" 
                    Margin="0,0,10,0"/>
            <Button Content="▶️ הרץ Pipeline" 
                    Click="RunPipeline_Click" 
                    Style="{StaticResource ModernButton}" 
                    Background="#8E44AD" 
                    FontSize="14"/>
        </StackPanel>

        <!-- אזור התראות מתקדם -->
        <Border Grid.Row="4" 
                Background="#F8F9FA" 
                BorderBrush="#DEE2E6" 
                BorderThickness="1" 
                CornerRadius="8" 
                Margin="0,15,0,0"
                Padding="0">
            
            <!-- כותרת האזור -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header עם כותרת וכפתורי פעולה -->
                <Border Grid.Row="0" 
                        Background="#343A46" 
                        CornerRadius="8,8,0,0" 
                        Padding="15,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <TextBlock Text="🔔" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock x:Name="NotificationsHeaderText" 
                                       Text="מרכז התראות" 
                                       FontSize="14" 
                                       FontWeight="SemiBold" 
                                       Foreground="White"/>
                            <Border x:Name="NotificationCountBadge" 
                                    Background="#E74C3C" 
                                    CornerRadius="10" 
                                    Padding="6,2" 
                                    Margin="10,0,0,0"
                                    Visibility="Collapsed">
                                <TextBlock x:Name="NotificationCountText" 
                                           Text="0" 
                                           FontSize="10" 
                                           FontWeight="Bold" 
                                           Foreground="White"/>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button x:Name="ClearNotificationsBtn"
                                    Content="🗑️ נקה"
                                    Background="Transparent"
                                    Foreground="White"
                                    BorderThickness="1"
                                    BorderBrush="#6C757D"
                                    Padding="8,4"
                                    FontSize="10"
                                    Click="ClearNotifications_Click"
                                    Margin="0,0,5,0">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="4"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#495057"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                            
                            <Button x:Name="CollapseNotificationsBtn"
                                    Content="📦"
                                    Background="Transparent"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Padding="8,4"
                                    FontSize="12"
                                    Click="ToggleNotifications_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="4"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#495057"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- תוכן ההתראות -->
                <ScrollViewer x:Name="NotificationsScrollViewer"
                              Grid.Row="1" 
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              MaxHeight="300"
                              Padding="0">
                    
                    <StackPanel x:Name="NotificationsPanel" Margin="0">
                        
                        <!-- הודעת ברירת מחדל -->
                        <Border x:Name="DefaultMessageBorder" 
                                Background="White" 
                                Padding="20"
                                Margin="1,0,1,1">
                            <StackPanel HorizontalAlignment="Center" 
                                        VerticalAlignment="Center">
                                <TextBlock Text="💭" 
                                           FontSize="32" 
                                           HorizontalAlignment="Center" 
                                           Margin="0,0,0,10"/>
                                <TextBlock Text="מערכת ההתראות מוכנה" 
                                           FontSize="14" 
                                           FontWeight="SemiBold" 
                                           Foreground="#6C757D" 
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="התראות יופיעו כאן כאשר תבוצעו פעולות במערכת" 
                                           FontSize="11" 
                                           Foreground="#ADB5BD" 
                                           HorizontalAlignment="Center" 
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                        
                    </StackPanel>
                </ScrollViewer>

                <!-- שורת סטטוס תחתונה -->
                <Border Grid.Row="2" 
                        Background="#E9ECEF" 
                        CornerRadius="0,0,8,8" 
                        Padding="15,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <TextBlock x:Name="SystemStatusText" 
                                       Text="🟢 המערכת פועלת תקין" 
                                       FontSize="11" 
                                       Foreground="#495057"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBlock Text="עדכון אחרון: " 
                                       FontSize="10" 
                                       Foreground="#6C757D"/>
                            <TextBlock x:Name="LastNotificationTimeText" 
                                       Text="אין עדכונים" 
                                       FontSize="10" 
                                       Foreground="#6C757D"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>